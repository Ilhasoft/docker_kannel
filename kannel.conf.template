group = core
admin-port = 13000
admin-password = ""
admin-allow-ip = ""
smsbox-port = 13001
log-file = "/dev/stdout"
box-allow-ip = "127.0.0.1"
log-level = ${LOG_LEVEL}


group = smsbox
bearerbox-host = "localhost"
sendsms-port = 13014
log-file = "/dev/stdout"
access-log = "/dev/stdout"
log-level = ${LOG_LEVEL}
mo-recode = true


group = smsc
smsc = smpp
smsc-id = ${SMSC_ID}
interface-version = 34
max-pending-submits = 20
host = ${SMSC_HOST}
port = ${SMSC_PORT}
smsc-username = "${SMSC_USER}"
smsc-password = "${SMSC_PASSWORD}"
system-type = ${SMSC_SYSTEM_TYPE}
system-type = SMPP
transceiver-mode = 1
log-file = "/dev/stdout"
log-level = ${LOG_LEVEL}
msg-id-type = 0x00
alt-charset = "UTF-8"

