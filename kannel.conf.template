group = sendsms-user
username = "${RAPIDPRO_USERNAME}"
password = "${RAPIDPRO_PASSWORD}"
concatenation = true
max-messages = 10
user-allow-ip = "*.*.*.*"
faked-sender = ${FAKED_SENDER}
forced-smsc = ${SMSC_ID}
default-smsc = ${SMSC_ID}

group = sms-service
keyword = default
